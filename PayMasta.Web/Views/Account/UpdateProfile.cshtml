@*Request sent to Admin popup*@

<div class="modal" id="rqstSentAdminModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="text-center rqstSentAdminModal-body-content">
                <div class="rqstSentAdminModal-heading-container">
                    <img src="~/Content/images/close.png" class="" data-bs-dismiss="modal" alt="" width="19" height="19"/>
                </div>
                <img src="~/Content/images/messagecheck.png" alt="" class="rqstSentAdminModal-msg-image"/>
                <p class="rqstSentAdminModal-content">Your request has been sent to the admin.</p>
                <div class="rqstSentAdminModal-btn-container">
                    <button class="rqstSentAdminModal-btn" id="rqstSentAdminModalBtn" data-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>
</div>

