    <div class="view-profile-sub-container-two">
        <div class="">
            <div class="view-profile-heading">Edit Profile</div>
        </div>
        <div class="userpage">
            <!-- <div class="container"> -->
            <div id="personalinfo">
                <div class="row">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label">First Name</label>
                            <div>
                                <input type="text" placeholder="Enter your first name" id="txtFirstName">
                            </div>
                            <span id="txtFirstNameError" style="color:red"></span>
                        </div>
                    </div>
                </div>

                <div class="row padding-top">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label">Middle Name</label>
                            <div>
                                <input type="text" placeholder="Enter your middle name" id="txtMiddleName">
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row padding-top">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label">Last Name</label>
                            <div>
                                <input type="text" placeholder="Enter your last name" id="txtLastName">
                            </div>
                            <span id="txtLastNameError" style="color:red"></span>
                        </div>
                    </div>
                </div>

                <div class="row padding-top">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label"><div class="nin-label">NIN Number</div></label>
                            <div>
                                <input type="text" name="nin-no" placeholder="Enter your nin number" id="txtNinNumber">
                            </div>
                            <span id="txtNinNumberError" style="color:red"></span>
                        </div>
                    </div>
                </div>

                <div class="row padding-top">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label">Email Address</label>
                            <div>
                                <input type="email" placeholder="Enter your email id" class="datedata" id="txtEmail" readonly>
                            </div>
                            <span id="txtEmailError" style="color:red"></span>
                        </div>
                    </div>
                </div>

                <div class="row padding-top">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label">Mobile Number</label>
                            <div>
                                <input type="text" placeholder="Enter your mobile number" class="datedata" id="txtMobileNumber" readonly>
                            </div>
                            <span id="txtMobileNumberError" style="color:red"></span>
                        </div>
                    </div>
                </div>

                <div class="row padding-top">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label">Comment</label>
                            <div>
                                <input type="text" placeholder="Enter the reason" class="datedata" id="txtComment" maxlength="500">
                            </div>
                            <span id="txtCommentError" style="color:red"></span>
                        </div>
                    </div>
                </div>

                <div class="row padding-top padding-bottom" id="AddressDiv">
                    <div class="col-xl-12 col-sm-10">
                        <div class="infodata">
                            <label for="" class="label">Address</label>
                            <div>
                                <input type="text" placeholder="Enter your address" class="datedata" id="txtAddess">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row request-btn-container">
                    <div class="col-xl-12 col-sm-10">
                        <button type="button" class="request-btn" id="btnRequestUpdateProfile">Request admin to update changes</button>
                    </div>
                </div>
            </div>
            <!-- </div> -->
        </div>
