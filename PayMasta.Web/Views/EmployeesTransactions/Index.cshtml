
@{
    ViewBag.Title = "Transactions";
}



<link href="~/Content/css/Employer/transaction.css" rel="stylesheet" />

<script src="~/Content/js/EmployerJs/EmployeeTransactions.js"></script>
<div class="main_div">
    <div class="sec_div">
        <div class="employer-transaction-drop_down">

            <div class="drop_select">
                <select name="cars" id="ddlMonth" class="ddlMonth">
                    <option value="0">Month</option>
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>

            <div class="date_option">

                <div class="date-container">
                    <div class="date_from">
                        From
                        <div class="" style="position: relative">
                            <input type="text" class="to_date" id="txtFromDate" placeholder="MM/DD/YYYY">
                            <i class="fa fa-calendar-check-o calender" aria-hidden="true" id="calender_from"></i>
                        </div>

                    </div>
                    <div class="date_from date_to">
                        To
                        <div style="position: relative">
                            <input type="text" class="to_date" id="txtEnddate" placeholder="MM/DD/YYYY">
                            <i class="fa fa-calendar-check-o calender" aria-hidden="true" id="calender_to"></i>
                        </div>

                    </div>
                </div>

                <div class="reset-filter-btn-container">
                    <button class="reset" id="btnReset">Reset</button>
                    <button class="filter" id="btnFilter">Fliter</button>
                </div>

            </div>

        </div>
        <div class="tab_data">
            <div class="tab_data1">
                <div class="main_transaction">
                    <div class="text">
                        Transactions
                    </div>
                    <div class="sec_transaction">

                        <div class="paycycle-export-btn-container">
                            <button class="paycycle" type="button" id="btnPaycycle">Paycycle</button>


                            <button type="button" class="csvexport" id="btnExportToCSV">Export To CSV</button>
                        </div>



                        <div class="search_icon">
                            <input type="search" placeholder="Search" class="search" id="employeeSearch">
                            <img class="search-img" src="~/Content/images/Employer/search-line.svg" alt="">

                        </div>
                        <div>

                        </div>
                    </div>

                </div>

                <div class="table-overflow">
                    <table class="employer-transaction-table">
                        <tr>
                            <th class="employer-transaction-head">S.No</th>
                            <th class="employer-transaction-head">Name</th>
                            <th class="employer-transaction-head">Staff Id</th>
                            <th class="employer-transaction-head">Phone Number</th>
                            <th class="employer-transaction-head">Email Id</th>
                            <th class="employer-transaction-head">Date</th>
                            <th class="employer-transaction-head">Action</th>
                        </tr>

                        <tbody id="userList">
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card" id="trans-no-record">
                <div class="card-body" style="text-align:center">
                    No record found.
                </div>
            </div>
        </div>

        <div class="pagination">
            <ul id="emplyr_pagination" class="pagination" style="float: right !important"></ul>
        </div>

    </div>
</div>


