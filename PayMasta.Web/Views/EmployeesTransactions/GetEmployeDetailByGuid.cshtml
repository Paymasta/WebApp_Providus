
@{
    ViewBag.Title = "Transactions";
}



<link href="~/Content/css/Employer/employeeWithdrawals.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
<script src="~/Content/js/EmployerJs/EmployeeWithdrawals.js"></script>

<style>
    .content {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>


<div class="main_div">
    <div class="sec_div">
        <div class="padding-bottom">
            <ol class="employee-list-breadcrumb">
                <li> <img src="~/Content/images/Employer/arrow-left.png" id="backBtn"/><a href="@Url.Action("Index","EmployeesTransactions")">Transaction</a></li>
               
                @*<li><a href="#">Employer Detail</a></li>
                <li><a href="#">View User List</a></li>
                <li><a href="#">View User Profile</a></li>*@
            <li class="list-active">Transaction Detail</li>
            </ol>
            <div class="content-main-container">
                <div class="personal-info-container row">
                    <div class="col-smallest-screen col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="row">
                            <div class="content col-xs-6 col-sm-6 col-md-6">User Name</div>
                            <div class="content text-bold col-xs-6 col-sm-6 col-md-6" id="with_user_name"></div>
                        </div>
                        <div class="row">
                            <div class="content col-xs-6 col-sm-6 col-md-6">Email Address</div>
                            <div class="content text-bold col-xs-6 col-sm-6 col-md-6" id="with_email"></div>
                        </div>
                        <div class="row">
                            <div class="content col-xs-6 col-sm-6 col-md-6">Number of working days</div>
                            <div class="content text-bold col-xs-6 col-sm-6 col-md-6" id="with_working_days"></div>
                        </div>
                        @*<div class="row">
                            <div class="content col-xs-3 col-sm-6 col-md-6">Current Available Amount</div>
                            <div class="content text-bold col-xs-3 col-sm-3 col-md-6" id="with_current_amount">₦100,00</div>
                        </div>*@
                    </div>
                    <div class="col-smallest-screen col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="row">
                            <div class="content col-xs-6 col-sm-6 col-md-6">Staff Id</div>
                            <div class="content text-bold col-xs-6 col-sm-6 col-md-6" id="with_staff_id"></div>
                        </div>
                        <div class="row">
                            <div class="content col-xs-6 col-sm-6 col-md-6">Mobile Number</div>
                            <div class="content text-bold col-xs-6 col-sm-6 col-md-6" id="with_phone_number"></div>
                        </div>
                        <div class="row">
                            <div class="content col-xs-6 col-sm-6 col-md-6">Earned Wages</div>
                            <div class="content text-bold col-xs-6 col-sm-6 col-md-6" id="with_earned_wages"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="tab_data">
            <div class="tab_data1">
                <div class="main_transaction">
                    <div class="text">
                        Transactions History
                    </div>
                    <div class="sec_transaction">
                        <div class="csvexport-container">
                            <button type="button" class="csvexport" id="btnExportCsv">Export To CSV</button>
                        </div>
                      
                        <div class="drop_select">

                            <select name="cars" id="cars" class="employeewithdrawals-month-drop-down">
                                <option value="0">Month</option>
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                        </div>
                        <div>
                        </div>
                    </div>

                </div>

                <div class="over-flow">
                    <table>
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>Accessed Amount</th>
                                <th>Employer Status </th>
                                <th>Admin Status </th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody id="employeeWithdrawals_List">
                           
                        </tbody>


                    </table>
                </div>
                <div class="card" id="no-record-found">
                    <div class="card-body" style="text-align:center">
                        No record found.
                    </div>
                </div>


            </div>
        </div>

        <div class="pagination" style="display: flex !important">
            <ul class="pagination" id="employeeWithdrawal_pagination"></ul>
        </div>

    </div>
</div>



