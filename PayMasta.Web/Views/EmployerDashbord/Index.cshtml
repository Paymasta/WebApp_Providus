                    <div>

                        <img src="~/Content/images/Employer/usericon.png" class="user-img" />
                    </div>
                    <div class="column-content-container">
                        <div class="column-numbers" id="total_employees"></div>
                        <div class="column-text">Total Empolyees</div>
                    </div>

                </div>
            </div>
            <div class="col-md-3 col-lg-3 col-sm-6 col-xs-12 container-column">
