                    @*<img src="./images/checkbox-circle-line.svg" alt="" class="user-img">*@
                    <img src="~/Content/images/Employer/checkbox-circle-line.svg" class="user-img" />
                    <div class="column-content-container">
                        <div class="column-numbers" id="totalActiveEmplopees"></div>
                        <div class="column-text">Total Active Employees</div>
                    </div>
                    <div class="anch-padding1">
                        <a class="anchortag" href="@Url.Action("Index","Employees")">View All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 container-section employer-transaction-main-container">
                <div class="section2-col">
                    <div class="withdraw-text">
                        <div class="request-text">Number of EWA Transaction</div>
                        <div>
                            <select name="" id="month">
                                <option value="-1">Last Week</option>
                                <option value="3 Week">Last 3 Weeks</option>
                                <option value="3 Month">Last 3 Months</option>
                                <option value="3 Years">Last 3 Years</option>
                            </select>
                            <!-- <a class="anchortag" href="">View All</a> -->
                        </div>
                    </div>
                    <div class="employer-graph-container"><canvas id="employerBarChart" style="padding-bottom: 6px"></canvas><div id="noEmployerBarChart">No record found.</div></div>
                    <hr>
                    <div class="withdraw-text1">
                        <div class="pay-text">Pay Cycle</div>
                        <div>
                            <button class="date-btn" id="PayCycle"></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 container-section2 employer-withdrawal-main-container">
                <div class="section2-col1">
                    <div class="withdraw-text">
                        <div class="request-text">Withdrawal Request</div>
                        <div>
                            <a class="anchortag" href="@Url.Action("Index","WithdrawRequest")">View All</a>
                        </div>
                    </div>
                    <div id="maiDivEwa">
                        @*<div><img src="~/Content/images/Employer/Icon.png" /></div>
            <div class="cherry-text"><span class="deo-color" id="fullname">Cherry Deo</span> request you to withdraw <span class="value-num">₦2,000</span> amount. <span class="date-text">03/01/2021</span> </div>*@
                    </div>

                    <div class="card" id="noWithdrawlRequest">
                        <div class="card-body" style="text-align:center">
                            No record found.
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- datatable -->
        <div class="main_div">
            <div class="tab_data">
                <div class="tab_data1">
                    <div class="main_transaction">
                        <div class="text1">
                            Employee
                        </div>
                        <div class="sec_transaction">
                            <a class="anchortag" href="@Url.Action("Index","Employees")">View All</a>
                        </div>
                    </div>
                    <div class="table-overflow">
                        <table>
                            <tr>
                                <th>S.No</th>
                                <th>Name</th>
                                <th>Email Id</th>
                                <th>Phone Number</th>
                                <th>Staff Id</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                            <tbody id="userList">
                            </tbody>



                        </table>
                        <div class="card" id="transnorecord">
                            <div class="card-body" style="text-align:center">
                                No record found.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>




    </div>
</div>

