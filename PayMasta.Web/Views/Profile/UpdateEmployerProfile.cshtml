                    </div>
                </div>
            </div>

            <div class="panel">
                <div data-toggle="collapse" data-parent="#accordion" href="#collapse2" class="profile-accordian">
                    <div class="text-container">
                        <img src="~/Content/images/setting-img.svg" alt="">
                        <div class="accordion-content">Settings</div>
                    </div>
                    <div class="text-end drop-down-img-container">
                        <img src="~/Content/images/drop-down-icon.svg" alt="" id="setting-down-img" class="down-arrow-icon">
                    </div>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="accordion-body">
                        <a href="@Url.Action("ChangePassword","Profile")">
                            <div class="collapse-sub-content">
                                <img src="~/Content/images/setting-icon.svg" alt="" width="34px" height="34px" />
                                <div class="px-2 accordion-content">Change Password</div>
                            </div>
                        </a>
                        @*  <div class="collapse-sub-content">
                                <img src="~/Content/images/setting-icon.svg" alt="" width="34px" height="34px" />
                                <div class="px-2 accordion-content">FAQs</div>
