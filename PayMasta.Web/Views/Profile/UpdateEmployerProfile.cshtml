                        <img src="~/Content/images/setting-img.svg" alt="">
                        <div class="accordion-content">My Profile</div>
                    </div>
                    <div class="text-end drop-down-img-container">
                        <img src="~/Content/images/drop-down-icon.svg" alt="" id="profile-arrow-img" class="down-arrow-icon">

