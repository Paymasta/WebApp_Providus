    </div>
</div>

@*Upload User List Modal*@

<div class="modal fade" id="uploadUserListModal" role="dialog">
    <div class="modal-dialog">
    
        <!-- Modal content-->
        <div class="modal-content">
        @*<div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Modal Header</h4>
        </div>*@
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" id="btnClose">&times;</button>
                <div class="col-xs-12 col-sm-12 col-md-12 upload-user-list-content">
                    <span class="col-xs-12 col-sm-4 col-md-4">Download format:</span>
                    <div class="col-xs-12 col-sm-8 col-md-8">
                        <button type="button" class="upload-modal-btns upload-modal-download-btn" id="btnDownload">Download</button>
                    </div>

                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 upload-user-list-content">
                    <span class="col-xs-12 col-sm-4 col-md-4">Upload user list:</span>
                    <div class="col-xs-12 col-sm-8 col-md-8">
                        <label for="uploadMmodalFileBrowse" class="upload-modal-btns">File Browse</label>
                        <input type="file" id="uploadMmodalFileBrowse" class="upload-modal-btns upload-modal-brows-btn" accept=".xlsx, .csv"/>
                    </div>
                    <span>
                        <label id="lblfilename"></label>
                    </span>
                </div>
                <button type="button" class="upload-modal-upload-btn" id="btnUploadCsv">Upload</button>
            </div>
       
        </div>
      
</div>
