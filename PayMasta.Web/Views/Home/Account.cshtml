@*wallet to bank modal*@
<div class="modal" tabindex="-1" id="walletToBankModal" aria-labelledby="exampleModalCenterTitle">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="loader" id="loader1"></div>
            <div class="modal-header">
                <h3 class="modal-title">Wallet To Bank</h3>
                <div data-dismiss="modal" class="airtime-close-btn-container">
                    <img src="~/Content/images/close.svg" id="BtnCloseAirtime" />

                </div>
            </div>
            <div class="modal-body">
                <div class="midguard">
                    <div class="row">
                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-xl-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
                            <div class="infodata">
                                <label for="" class="label">Account Type</label>
                                <div>
                                    @*<input type="text" placeholder="Enter your operator name">*@
                                    <select id="ddlAccountTypeList" class="operator">
                                        <option value="" selected>Select AccountType</option>
                                        <option value="Self">Self</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span class="form-validations-error" id="AccountTypeError"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row padding-top">
                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-xl-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
                            <div class="infodata">
                                <label for="" class="label">Bank Name</label>
                                <div>
                                    @*<input type="text" placeholder="Enter your operator name">*@
                                    <select id="ddlbankList" class="operator">
                                        <option value="">Select Bank</option>
                                    </select>
                                    <span class="form-validations-error" id="BankError"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row padding-top">
                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-xl-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
                            <div class="infodata">
                                <label for="" class="label">Account Number</label>
                                <div>
                                    <input type="text" placeholder="Account Number" id="txtBankAccountNumber" maxlength="12" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                                </div>
                                <span class="form-validations-error" id="bankAccountNumberError"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row padding-top">
                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-xl-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
                            <div class="infodata">
                                <label for="" class="label">Beneficiary Name</label>
                                <div>
                                    <input type="text" placeholder="Beneficiary Name" id="txtBankBeneficiaryName" maxlength="30">
                                </div>
                                <span class="form-validations-error" id="txtBankBeneficiaryNameError"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row padding-top">
                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-xl-offset-1 col-lg-offset-1 col-md-offset-1 col-sm-offset-1">
                            <div class="infodata">
                                <label for="" class="label">Amount</label>
                                <div>
                                    <input type="text" placeholder="Amount" id="bankTransferAmount" maxlength="9" oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                                </div>
                                <span class="form-validations-error" id="bankTransferAmountError"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button class="submitdata" id="btnWalletToBankPay">Transfer</button>
            </div>
        </div>
    </div>
</div>

