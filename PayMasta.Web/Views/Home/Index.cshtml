            background-repeat: no-repeat;
            appearance: none;
            -webkit-appearance: none;
            background-position: calc(100% - 10px);
            outline: none;
        }

        .down-arrow-img {
            position: absolute;
            top: 50%;
            right: 0.3rem;
            transform: translate(-50%, -50%);
        }

        #pieChart {
            max-width: 500px !important;
            display: block !important;
            height: 200px !important;
            width: 200px !important;
        }



        .padding-top {
            padding-top: 1.5rem;
        }

